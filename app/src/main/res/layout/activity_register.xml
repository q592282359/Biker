<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_commen_tab"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.xw.repo.XEditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="58dp"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:drawableLeft="@mipmap/phone"
            android:drawablePadding="10dp"
            android:hint="请输入您的手机号"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#b9b9b9"
            android:textSize="15dp"
            app:x_clearDrawable="@mipmap/login_delete_icon"
            app:x_disableEmoji="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#cccccc" />

        <com.xw.repo.XEditText
            android:id="@+id/et_passWord"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="38dp"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:drawableLeft="@mipmap/dl_mm"
            android:drawablePadding="10dp"
            android:hint="请输入您的密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#b9b9b9"
            android:textSize="15dp"
            app:x_clearDrawable="@mipmap/login_delete_icon"
            app:x_hidePwdDrawable="@mipmap/dl_bkj_icon"
            app:x_showPwdDrawable="@mipmap/dl_kj_icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="38dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <com.xw.repo.XEditText
                android:id="@+id/et_verify_code"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@mipmap/code"
                android:drawablePadding="10dp"
                android:hint="请输入验证码"
                android:singleLine="true"
                android:textColor="#333333"
                android:textColorHint="#b9b9b9"
                android:textSize="15dp"
                app:x_clearDrawable="@mipmap/login_delete_icon"
                app:x_disableEmoji="true" />

            <com.leew.biker.view.TimeButton
                android:id="@+id/checkcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:background="@drawable/register_get_code"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="获取验证码"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#cccccc" />

        <TextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/login_back"
            android:gravity="center"
            android:padding="10dp"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textSize="16sp"
            android:text="赶紧注册成为一个Biker吧!"
            android:textColor="@color/theme" />
    </LinearLayout>
</LinearLayout>